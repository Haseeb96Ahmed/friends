
<h1>Friends List</h1>

<table class="table table-striped  table-bordered  table-hover">
  <br/>
  <thead class="table-dark">
    <tr>
      <th >First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Twitter</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.email %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>
        <td><%= link_to 'Show', friend, class:"btn btn-primary  btn-sml" %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend), class:"btn btn-primary  btn-sml" %></td>
        <td><%= link_to 'Destroy', friend,class:"btn btn-primary  btn-sml", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-success btn-lg" %><br/><br/>
